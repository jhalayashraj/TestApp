<h1>Profiles</h1>

<table class="table table-bordered tr-list">
  <thead>
    <tr>
      <!-- <th>User</th> -->
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Name</th>
      <th>Email</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>About me</th>
      <th>Hobbies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <!-- <td><%#= profile.user %></td> -->
        <td><%= profile.user.first_name %></td>
        <td><%= profile.user.last_name %></td>
        <td><%= profile.user.user_name %></td>
        <td><%= profile.user.email %></td>
        <td><%= profile.date_of_birth %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.about_me.html_safe %></td>
        <td><%= profile.hobbies %></td>
        <!-- <td><%#= link_to 'Show', profile %></td> -->
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

