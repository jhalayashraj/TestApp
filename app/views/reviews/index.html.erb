<h1>Reviews</h1>

<%= render 'form', review: @review %>
<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td width="50%"><%= review.user.user_name %></td>
        <!-- <td><%#= link_to 'Show', review %></td> -->
        <td width="15%"><%= link_to 'Edit', edit_review_path(review), class: 'btn btn-default btn-sm', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Editing..."} %></td>
        <td width="15%"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?', disable_with: "<i class='fa fa-spinner fa-spin'></i> Destroying..."}, class: 'btn btn-default btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', post_path(post_id: @comment.post_id, id: @comment.id), class: 'btn btn-primary', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Back" } %>
